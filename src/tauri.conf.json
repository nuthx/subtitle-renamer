{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "subtitle-renamer",
  "version": "../package.json",
  "identifier": "com.nuthx.subtitle-renamer",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Subtitle Renamer",
        "width": 1200,
        "height": 760,
        "minWidth": 1000,
        "minHeight": 680
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "default",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "opener:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "../icons/32x32.png",
      "../icons/128x128.png",
      "../icons/128x128@2x.png",
      "../icons/icon.icns",
      "../icons/icon.ico"
    ]
  }
}
